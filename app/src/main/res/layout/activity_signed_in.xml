<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="@string/employee_dashboard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/Black"
        android:id="@+id/header"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:id="@+id/relLayout0"
        android:padding="20dp"
        android:layout_marginTop="20dp">

        <!-- This weeks initiatives -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout1">

            <ImageView
                android:id="@+id/icon_initiatives"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/this_week_s_initiatives"
                android:src="@drawable/ic_initiatives" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/icon_initiatives"
                android:textSize="15sp"
                android:text="@string/this_week_s_initiatives"
                android:layout_marginStart="10dp"
                android:textColor="@color/Black"
                android:layout_centerVertical="true"/>

        </RelativeLayout>


        <!-- Scheduling -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout2"
            android:layout_below="@id/relLayout1"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/icon_scheduling"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/scheduling"
                android:src="@drawable/ic_schedule" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/icon_scheduling"
                android:textSize="15sp"
                android:text="@string/employee_schedule"
                android:layout_marginStart="10dp"
                android:textColor="@color/Black"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <!-- Culture -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout3"
            android:layout_below="@id/relLayout2"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/icon_culture"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/company_culture"
                android:src="@drawable/ic_culture" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/icon_culture"
                android:textSize="15sp"
                android:text="@string/company_culture"
                android:layout_marginStart="10dp"
                android:textColor="@color/Black"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </RelativeLayout>



    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/profit_chart"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/relLayout0"
        android:contentDescription="@string/tabian_consulting_sales_chart"/>


</RelativeLayout>
